{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/wsgi.py": {
      "runtime": "@vercel/python",
      "includeFiles": "staticfiles/**"
    }
  },
  "buildCommand": "python manage.py collectstatic --noinput",
  "routes": [
    { "src": "^/static/(.*)$", "dest": "/api/wsgi.py" },
    { "src": ".*", "dest": "/api/wsgi.py" }
  ]
}
